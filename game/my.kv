#:kivy 1.11.1

<MenuScreen>:
    orientation: 'vertical'
    Button:
        text: 'Play'
        size: 400, 40
        size_hint: None, None
        center_x: root.center_x
        center_y: root.center_y
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = "game"

    Button:
        text: 'Exit'
        size: 200, 30
        size_hint: None, None
        center_x: root.center_x
        center_y: root.center_y - 45
        on_press: app.stop()

<GameScreen>:
    Button:
        text: 'exit'
        size: 30, 30
        size_hint: None, None
        center_x: 30
        center_y: 30
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'

    Button:
        name: 1
        text: 'pos1'
        size: 200, 200
        size_hint: None, None
        center_x: root.right / 4
        center_y: root.top * 4 / 5
        on_press:
            root.game.level.choice(self.name)
            root.game.level.score_check()
        on_release:
            root.game.play()
            root.game.win_check()

    Button:
        name: 2
        text: 'pos2'
        size: 200, 200
        size_hint: None, None
        center_x: root.right * 3 / 4
        center_y: root.top * 4 / 5
        on_press:
            root.game.level.choice(self.name)
            root.game.level.score_check()
        on_release:
            root.game.play()
            root.game.win_check()

    Button:
        name: 3
        text: 'pos3'
        size: 200, 200
        size_hint: None, None
        center_x: root.right / 4
        center_y: root.top * 2 / 5
        on_press:
            root.game.level.choice(self.name)
            root.game.level.score_check()
        on_release:
            root.game.play()
            root.game.win_check()

    Button:
        name: 4
        text: 'pos4'
        size: 200, 200
        size_hint: None, None
        center_x: root.right * 3 / 4
        center_y: root.top * 2 / 5
        on_press:
            root.game.level.choice(self.name)
            root.game.level.score_check()
        on_release:
            root.game.play()
            root.game.win_check()

<WinScreen>:
    Button:
        text: 'menu'
        size: 30, 30
        size_hint: None, None
        center_x: 30
        center_y: root.top - 30
        on_press: root.manager.current = 'menu'

    Label:
        text: 'YOU WIN!!!'
        text_size: 100, None
        center: root.center
