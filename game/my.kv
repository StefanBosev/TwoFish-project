#:kivy 1.11.1

<MenuScreen>:
    orientation: 'vertical'
    Button:
        text: 'Play'
        size: 400, 40
        size_hint: None, None
        center_x: root.center_x
        center_y: root.center_y
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = "game"

    Button:
        text: 'Exit'
        size: 200, 30
        size_hint: None, None
        center_x: root.center_x
        center_y: root.center_y - 45
        on_press: app.stop()

<GameScreen>:
    Button:
        text: 'exit'
        size: 40, 40
        size_hint: None, None
        center_x: 40
        center_y: 40
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'

    ImageButton:
        id: btn1
        name: 0
        source: root.game.level.icons[self.name]
        size: 200, 200
        size_hint: None, None
        center_x: root.right / 4
        center_y: root.top * 4 / 5
        on_press:
            root.game.level.choice(self.name)
            root.game.level.score_check()
        on_release:
            root.game.play()
            root.new_label(root.game.level.question['results'][0]['answer']['word'])
            if root.game.win_check(): root.manager.current = 'win_screen'
            root.btn_update(root.game.level.icons)

    ImageButton:
        id: btn2
        name: 1
        source: root.game.level.icons[self.name]
        size: 200, 200
        size_hint: None, None
        center_x: root.right * 3 / 4
        center_y: root.top * 4 / 5
        on_press:
            root.game.level.choice(self.name)
            root.game.level.score_check()
        on_release:
            root.game.play()
            root.new_label(root.game.level.question['results'][0]['answer']['word'])
            if root.game.win_check(): root.manager.current = 'win_screen'
            root.btn_update(root.game.level.icons)

    ImageButton:
        id: btn3
        name: 2
        source: root.game.level.icons[self.name]
        size: 200, 200
        size_hint: None, None
        center_x: root.right / 4
        center_y: root.top * 2 / 5
        on_press:
            root.game.level.choice(self.name)
            root.game.level.score_check()
        on_release:
            root.game.play()
            root.new_label(root.game.level.question['results'][0]['answer']['word'])
            if root.game.win_check(): root.manager.current = 'win_screen'
            root.btn_update(root.game.level.icons)

    ImageButton:
        id: btn4
        name: 3
        source: root.game.level.icons[self.name]
        size: 200, 200
        size_hint: None, None
        center_x: root.right * 3 / 4
        center_y: root.top * 2 / 5
        on_press:
            root.game.level.choice(self.name)
            root.game.level.score_check()
        on_release:
            root.game.play()
            root.new_label(root.game.level.question['results'][0]['answer']['word'])
            if root.game.win_check(): root.manager.current = 'win_screen'
            root.btn_update(root.game.level.icons)

    Label:
        id: label1
        text: root.game.level.label_word

<WinScreen>:
    Button:
        text: 'menu'
        size: 40, 40
        size_hint: None, None
        center_x: 40
        center_y: root.top - 40
        on_press: root.manager.current = 'menu'

    Label:
        text: 'YOU WIN!!!'
        text_size: 100, None
        center: root.center
